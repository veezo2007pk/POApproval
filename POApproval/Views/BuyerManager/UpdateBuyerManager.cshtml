@model POApproval.Helper.BuyerManagerViewModel
@{
    ViewBag.Title = "Update Manage Buyer";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
<section class="col-md-6">
    <div ng-app="myBuyerManagerApp">
        <div ng-controller="BuyerManagerCtrl" data-ng-init="UpdateBuyerManager(@Newtonsoft.Json.JsonConvert.SerializeObject(Model))" class="divList">
            <div class="centerLoader" data-loading> </div>
            <div class=" container">
                <div class="row">
                    <form name="myform">
                        <div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Staff ID</label>
                                <div class="col-sm-10">
                                    <select title="Select" ng-model="intUserCode" class="form-control select-searchable" ng-required="true" disabled>
                                        <option ng-repeat="user in Users" ng-value="{{user.usercode}}">
                                            {{user.usercode}}--{{user.fullname}}
                                        </option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Buyer</label>
                                <div class="col-sm-10">
                                    <select title="Select" ng-model="intBuyerCode" class="form-control select-searchable" ng-required="true" >
                                        <option ng-repeat="buyer in buyers" ng-value="{{buyer.BuyeCode}}">
                                            {{buyer.BuyeCode}}--{{buyer.BuyerName}}
                                        </option>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <div class="form-group error">

                                        <div id="UserErrorMessage"></div>

                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <button ng-click="myform.$valid && InsertData()" id="btnSave" value="Update" class="btn btn-success">Update</button>
                                </div>
                            </div>





                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
