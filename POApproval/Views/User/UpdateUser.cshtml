@model POApproval.Helper.UserViewModel
@{
    ViewBag.Title = "Update Users";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
<section class="col-md-6">
    <div ng-app="myApp">
        <div ng-controller="myCtrl" data-ng-init="UpdateUser(@Newtonsoft.Json.JsonConvert.SerializeObject(Model))" class="divList">
            <div class="centerLoader" data-loading> </div>
            <div class=" container">
                <div class="row">
                    <form name="myform">
                        <div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Username (Staff ID)</label>
                                <div class="col-sm-10">
                                    <input readonly type="text" class="form-control select-searchable" ng-model="usercode" value="@Model.usercode">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Password</label>
                                <div class="col-sm-10">
                                    <input type="password" value="@Model.pwd" class="form-control" ng-model="pwd" ng-required="true">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Full Name</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.fullname" class="form-control" ng-model="fullname" readonly ng-required="true">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" value="@Model.email" class="form-control" readonly ng-model="email" ng-required="true">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Xpert User Login</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control xpertLoginID" ng-model="xpertLoginID" value="@Model.xpertLoginID">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Department</label>
                                <div class="col-sm-10">
                                    <input type="text" value="@Model.usergroup" class="form-control" readonly ng-model="usergroup" ng-required="true">

                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">User Access</label>
                                

                                <div class="col-sm-10"  id="membersToNotify">
                                    <div class="checkbox" ng-repeat="role in roles">
                                        <label>
                                            <input  type="checkbox" data-id="0:{{role.menuCode}}" checklist-model="userr.roles" checklist-value="role.menuCode"> {{role.strMenuName}}
                                        </label>
                                    </div>
                                    @*@if (Session["SuperAdmin"].ToString() == "Y")
            {

                <div class="checkbox">
                    <label><input type="checkbox" ng-model="bolIsNewUser" value="@Model.bolIsNewUser" id="option-2">Manage User</label>
                </div>
            }
            else
            {
                <div class="checkbox">
                    <label><input type="checkbox" ng-model="bolIsNewUser" value="@Model.bolIsNewUser" id="option-2" disabled>Manage User</label>
                </div>
            }*@
                                    @*<div class="checkbox">
                <label><input type="checkbox" ng-model="bolIsNewBuyer" value="@Model.bolIsNewBuyer" id="option-3">New Buyer</label>
            </div>*@
                                    @*<div class="checkbox">
                <label><input type="checkbox" ng-model="bolIsManageBuyer" value="@Model.bolIsManageBuyer" id="option-4">Manage Buyer</label>
            </div>*@
                                    @if (Session["SuperAdmin"].ToString() == "Y")
                                    {
                                        <div class="checkbox">
                                            <label><input type="checkbox" ng-model="SuperAdmin" value="@Model.SuperAdmin" id="option-5">Super Admin</label>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="checkbox">
                                            <label><input type="checkbox" ng-model="SuperAdmin" value="@Model.SuperAdmin" id="option-5" disabled>Super Admin</label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <div class="form-group error">

                                        <div id="UserErrorMessage"></div>

                                    </div>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label"></label>
                                <div class="col-sm-10">
                                    <a href="http://localhost:61646/User/UserList" class="btn btn-primary">Back</a>

                                    <button ng-click="myform.$valid && InsertData()" id="btnSave" value="Update" class="btn btn-success">Update</button>
                                </div>
                            </div>





                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
