@model POApproval.ViewModel.userDataViewModel
@{
    ViewBag.Title = "Add User";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>
<section class="col-md-6">
    <div ng-app="myApp">
        <div ng-controller="myCtrl" class="divList">
            <div class="centerLoader" data-loading> </div>
            <div class=" container">
                <div class="row">
                    <form name="myform">

                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Staff ID</label>
                            <div class="col-sm-10">
                                <select title="Select" class="form-control" ng-model="usercode" ng-required="true" id="user" ng-change="getdetails($element.target)" onchange="getUserData()">
                                    <option value="">--Please select user--</option>
                                    @foreach (var item in Model.getUserList)
                                    {
                                <option data-fullname="@item.Username" data-Superadmin="@item.SuperAdmin" data-bolIsApprovalLimit="@item.bolIsApprovalLimit" data-bolIsManageBuyer="@item.bolIsManageBuyer" data-bolIsNewBuyer="@item.bolIsNewBuyer" data-bolIsNewUser="@item.bolIsNewUser" data-email="@item.Email" data-usergroup="@item.Department" value="@item.UserCode">
                                    @item.UserCode -- @item.Username 
                                </option>

                                    }
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Password</label>
                            <div class="col-sm-10">
                                <input type="password" class="form-control" ng-model="pwd" ng-required="true" pattern="^\S+$" title="Enter Password without Space.">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Full Name</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control fullname" ng-model="fullname">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">xpertLoginID</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control xpertLoginID" ng-model="xpertLoginID" >
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control email" ng-model="email" ng-value="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Department</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control usergroup" ng-model="usergroup" ng-value="">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">User Access</label>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label><input type="checkbox" ng-model="bolIsApprovalLimit" value="0" id="option-1">Approval Limit</label>
                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" ng-model="bolIsNewUser" value="0" id="option-2">New User</label>
                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" ng-model="bolIsNewBuyer" value="0" id="option-3" >New Buyer</label>
                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" ng-model="bolIsManageBuyer" value="0" id="option-4" >Manage Buyer</label>
                                </div>
                                <div class="checkbox">
                                    <label><input type="checkbox" ng-model="SuperAdmin" value="0" id="option-5" > Is Admin</label>
                                </div>
                            </div>
                        </div>
                        @*<div class="form-group row">
                            <label class="col-sm-2 col-form-label">Status</label>
                            <div class="col-sm-10">
                                <div class="checkbox">
                                    <label><input type="checkbox" ng-model="status" value="0" ng-required="true">Active</label>
                                </div>
                            </div>
                        </div>*@
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <button ng-click="myform.$valid && InsertData()" id="btnSave" value="Submit" class="btn btn-success">Save</button>
                            </div>
                        </div>
                    </form>
                        
                </div>
            </div>
        </div>
    </div>
</section>

