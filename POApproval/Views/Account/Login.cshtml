@model POApproval.Models.procSelectUserData_Result
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<style>
    body{
        overflow-x:hidden;
    }
</style>
    <div class="row">
        <div class="col-sm-12">
        <div class="modal-dialog modal-login">
            <div class="modal-content">
                <div class="modal-header login-title">
                    <h5 class="modal-title">USER LOGIN</h5>

                </div>
                <div class="modal-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                    <div class="form-group">
                        <i class="fa fa-user"></i>
                        <input type="text" name="UserCode" class = "form-control" title="Max length should be 5 digits" pattern="\d{5}" placeholder = "Login ID" required = "required" onkeypress = "return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 48 && event.charCode <= 57"/>
                        @*@Html.TextBoxFor(m => m.UserCode, new { @maxlength = "5", @class = "form-control", @name = "UserCode", @placeholder = "Login ID", @type = "Number", @required = "required", @onkeypress = "return (event.charCode == 8 || event.charCode == 0) ? null : event.charCode >= 48 && event.charCode <= 57", @title = "Enter Username without Space." })*@
                        @*<input type="text" class="form-control" name="logon_user_id" placeholder="Login ID" required="required">*@
                    </div>
                    <div class="form-group">
                        <i class="fa fa-lock"></i>
                        <input type="password" name="Password" class="form-control" title="Max length should be 200 digits" maxlength="200"    placeholder="Password" required="required"  />

                        @*@Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @required = "required", @title = "Enter Password without Space.", @pattern = "\d{5}" })*@

                        @*<input type="password" class="form-control" name="UserPassword" placeholder="Password" required="required">*@
                    </div>
                    <div class="form-group text-right">
                        Remember Me
                        @Html.CheckBoxFor(m => m.RememberMe, new { @class= "rememberme" })
                    </div>
                        <div class="form-group error">

                            <label>@ViewBag.loginFailed</label>

                        </div>

                        <div class="form-group text-center">
                            <input type="submit" class="btn btn-primary btn-lg" style="        background: #243894 !important" value="Login">

                        </div>
                    }
                </div>

            </div>
        </div>
    </div>
        </div>


